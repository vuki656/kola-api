{
    "name": "kola-api",
    "version": "0.0.0",
    "private": true,
    "description": "Vehicle bidding marketplace API",
    "repository": "git@github.com:vuki656/kola-api.git",
    "license": "UNLICENSED",
    "scripts": {
        "database:migrate": "docker compose run --no-deps --rm migration",
        "database:seed": "prisma db seed",
        "database:setup": "docker compose run --rm migration",
        "database:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "dev": "nodemon",
        "generate:template": "plop",
        "generate:types:graphql:dev": "graphql-codegen --config='./codegen.ts'",
        "generate:types:graphql:test": "graphql-codegen --config='./codegen.tests.ts'",
        "generate:types:orm": "prisma generate",
        "lint": "yarn lint:cspell && yarn lint:prettier && yarn lint:package-json && yarn lint:eslint",
        "lint:cspell": "cspell --no-progress --no-summary '**'",
        "lint:eslint": "eslint './src/**/*.{js,ts,mjs,graphql}' --quiet --cache",
        "lint:package-json": "npmPkgJsonLint --configFile ./.packagerc.js .",
        "lint:prettier": "prettier --loglevel warn --check './**/*{yaml,yml,json,md,graphql}'",
        "schema:build": "ts-node ./src/server/buildSchema.ts && prettier --write ./schema.graphql",
        "test:integration": "jest --runInBand --config jest.integration.config.ts"
    },
    "dependencies": {
        "@apollo/server": "^4.9.0",
        "@escape.tech/graphql-armor": "^2.2.0",
        "@prisma/client": "^5.0.0",
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dayjs": "^1.11.9",
        "dotenv": "^16.3.1",
        "envalid": "^7.3.1",
        "express": "^4.18.2",
        "graphql": "^16.7.1",
        "graphql-scalars": "^1.22.2",
        "jsonwebtoken": "^9.0.1",
        "pino": "^8.14.2",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@graphql-codegen/add": "^5.0.0",
        "@graphql-codegen/cli": "^5.0.0",
        "@graphql-codegen/graphql-modules-preset": "^4.0.1",
        "@graphql-codegen/typescript-operations": "^4.0.1",
        "@graphql-codegen/typescript-resolvers": "^4.0.1",
        "@graphql-eslint/eslint-plugin": "^3.20.1",
        "@graphql-tools/load-files": "^7.0.0",
        "@graphql-tools/merge": "^9.0.0",
        "@rimac-technology/style-guide": "^8.0.3",
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.13",
        "@types/eslint": "^8.44.1",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.3",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^18.17.1",
        "@types/prettier": "^3.0.0",
        "cspell": "^6.31.2",
        "eslint": "^8.46.0",
        "graphql-tag": "^2.12.6",
        "jest": "^29.6.2",
        "nodemon": "^3.0.1",
        "npm-package-json-lint": "^7.0.0",
        "pino-pretty": "^10.2.0",
        "plop": "^3.1.2",
        "prettier": "^3.0.0",
        "prisma": "^5.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "packageManager": "yarn@3.5.0",
    "prisma": {
        "schema": "./src/database/schema.prisma",
        "seed": "ts-node ./src/database/seed/index.ts"
    }
}
